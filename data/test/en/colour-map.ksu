(object
  (document "Colour Picker"
    (defs
      (linearGradient
        (ε (x1 . "0") (y1 . "0") (x2 . "100%") (y2 . "0") (id . "hue"))
        (stop (ε (style . "stop-color:#ff0000") (offset . "0")))
        (stop (ε (style . "stop-color:#ffff00") (offset . "0.167")))
        (stop (ε (style . "stop-color:#00ff00") (offset . "0.333")))
        (stop (ε (style . "stop-color:#00ffff") (offset . "0.5")))
        (stop (ε (style . "stop-color:#0000ff") (offset . "0.667")))
        (stop (ε (style . "stop-color:#ff00ff") (offset . "0.833")))
        (stop (ε (style . "stop-color:#ff0000") (offset . "1"))))
      (linearGradient
        (ε (x1 . "0") (y1 . "0") (x2 . "0") (y2 . "100%") (id . "luminance"))
        (stop (ε (style . "stop-color:#000000") (offset . "0")))
        (stop (ε (style . "stop-color:#000000;stop-opacity:0")
                 (offset . "0.5")))
        (stop (ε (style . "stop-color:#ffffff;stop-opacity:0")
                 (offset . "0.5")))
        (stop (ε (style . "stop-color:#ffffff") (offset . "1")))))
      (g
        (rect (ε (width . "100%") (height . "100%")
              (style . "fill:url(#hue)")))
        (rect (ε (width . "100%") (height . "100%")
              (style . "fill:url(#luminance)"))))))
