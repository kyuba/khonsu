(tao:map-extension "xhtml" "application/xhtml+xml")

(tao:transform
  (tao:match format . "application/xhtml\\+xml")

  (tao:replace
     ("document") .
     ("<?xml version=\"1.0\" encoding=\"utf-8\" ?><!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.1//EN\" \"http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd\">"
      (html (ε (xmlns . "http://www.w3.org/1999/xhtml"))
            (head (title (tao:item 1)))
            (body (h1 (tao:item 1))
                  (tao:tail 2)))))

  (tao:replace
     ("paragraph") .
     (p (tao:all)))

  (tao:replace
     ("wrap") .
     (div (tao:all)))

  (tao:replace
     ("section") .
     ((h2 (tao:item 1))
      (tao:tail 2)))

  (tao:replace
     ("sub-section") .
     ((h3 (tao:item 1))
      (tao:tail 2)))

  (tao:replace
     ("sub-sub-section") .
     ((h4 (tao:item 1))
      (tao:tail 2)))

  (tao:replace
     ("formal-paragraph") .
     ((h5 (tao:item 1))
      (tao:tail 2)))

  (tao:replace
     ("link") .
     (a (tao:all)))

  (tao:replace
     ("icon") .
     (a (ε (class . "icon") (href . (tao:item 1)))
      (img (ε (src . (tao:item 3))))
      (tao:item 2)))

  (tao:replace
     ("image") .
     (img (tao:all)))

  (tao:replace
     ("list") .
     (ul (tao:all)))

  (tao:replace
     ("item") .
     (li (tao:all))))
